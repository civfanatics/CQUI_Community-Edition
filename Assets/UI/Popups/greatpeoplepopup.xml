    <!-- ==== CQUI CUSTOMIZATION BEGIN ====================================================================================== -->
    <!-- CQUI replaces the single "WoodPaneling" texture with 4 textures, which allows CQUI to size the panel height beyond the 768 pixels -->
    <!-- that Firaxis set in the unmodified game. CQUI calculates the Y-value of the PopupContainer based on the size to create the --> 
    <!-- Recruit Progress section, which uses a count of alive, major civs to determine the size of the list of Civs. -->
    <!-- CQUI Modification: PopupContainer Y-size changed from 768 to parent -->
    <Container ID="PopupContainer" Anchor="C,C" Size="parent,parent">
        <!-- PeopleScroller is used for the Great People and Heroes panels; RecruitedArea is for the Previously Recruited list -->
        <ScrollPanel ID="PeopleScroller" Size="parent,parent" Vertical="0" AutoScrollBar="1">
            <!-- CQUI: The WoodPaneling texture that replaces the Firaxis-provided one, which has the border lines and curved top of each panel, -->
            <!--       and includes parts that are covered by the title bar and the panel selection buttons (75px from top of texture to top of the "wood panel" piece) -->
            <!--       WoodPaneling is the ID in the unmodified file, retained by CQUI for compatability reasons. -->
            <!--       The Y-size is static at 547px, if that top section stretches beyond 547px, the CQUI_GreatPeople_Background_Repeat_Top is used for filling in after 547. -->
            <Image ID="WoodPaneling" Anchor="L,T" Size="parent,547" Texture="CQUI_GreatPeople_Background_Top.dds" StretchMode="TileX"/>
            <!-- CQUI: CQUI_WoodPanelingTopFiller is the lighter color with vertical lines at each end, is 214px wide -->
            <!--       The color of this texture matches the bottom of the WoodPaneling (CQUI_GreatPeople_Background_Top.dds) texture -->
            <!--       as such, this texture is used to fill in any areas below the 547px already being covered by the WoodPaneling object defined above -->
            <Image ID="CQUI_WoodPanelingTopFiller" Size="parent,parent-547" Offset="0,547" Texture="CQUI_GreatPeople_Background_Repeat_Top.dds" StretchMode="Tile" />
            <!-- CQUI: This is the darker "paneling", which appears under the Recruit Progress section.  -->
            <!--       The Y-size of this Image object is set programatically based on the calculated size of the Recruit Progress section. -->
            <!--       Because the anchor for this Image object is at the bottom, the Y-size and StretchMode value combine to cover any of the WoodPaneling or CQUI_WoodPanelingTopFiller -->
            <Image ID="CQUI_WoodPanelingBottomFiller" Anchor="L,B" Size="parent,4" Offset="0,-2" Texture="CQUI_GreatPeople_Background_Repeat_Bottom.dds" StretchMode="Tile"/>
            <!-- This image is the bottom of the paneling outline (curved corner and horizontal line, 15px tall), and the bottom part of the Great People frame (65px tall) -->
            <Image ID="CQUI_WoodPanelingBottom" Anchor="L,B" Size="parent,80" Texture="CQUI_GreatPeople_Background_Bottom.dds" StretchMode="TileX"/>
            <!-- ==== CQUI CUSTOMIZATION END ======================================================================================== -->

            <Stack ID="PeopleStack" Offset="0,78" StackGrowth="Right" StackPadding="0"/>
            <ScrollBar Anchor="L,B" Offset="0,10" Size="parent-10,8" Style="ScrollHorizontalBackingAlt">
                <Thumb Style="ScrollThumbHAlt" />
            </ScrollBar>

            <Tutorial ID="GPAbilityPointer" Style="TutorialContainer" Anchor="L,C" Offset="410,70" TriggerBy="TutorialGPAbilityPointer">
